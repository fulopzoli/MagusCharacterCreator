<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.RészletekFragment.KepzetsegReszletFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/Kepzetsegleiras"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/r_szletek"
            android:textSize="18dp"
            app:layout_constraintEnd_toStartOf="@+id/Kepzetsegreszletguiudelinevertical90"
            app:layout_constraintStart_toStartOf="@+id/Kepzetsegreszletguiudelinevertical10"
            app:layout_constraintTop_toBottomOf="@+id/Kepzetsegreszletneveid" />


        <TextView
            android:id="@+id/Kepzetsegreszletneveid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Képzetség neve:  "
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@+id/Kepzetsegreszletguiudelinevertical10"
            app:layout_constraintTop_toTopOf="@+id/Varazsreszletguidelinthorizontal45" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Varazsreszletguidelinthorizontal45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textSize="18dp"

            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Kepzetsegreszletguidelinthorizontal10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="319dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="1.0"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Kepzetsegreszletguiudelinevertical10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.10" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Kepzetsegreszletguiudelinevertical90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>