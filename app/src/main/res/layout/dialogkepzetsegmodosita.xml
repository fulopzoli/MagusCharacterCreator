<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Fokdialogid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="35dp"
        android:textSize="20dp"
        android:text="Fok : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/szazalekid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:text="Százalék  : "
        app:layout_constraintStart_toStartOf="@+id/Fokdialogid"
        app:layout_constraintTop_toBottomOf="@+id/Fokdialogid" />

    <Spinner
        android:id="@+id/Spinnerfokdialog"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/Fokdialogid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.794"
        app:layout_constraintStart_toEndOf="@+id/Fokdialogid"
        app:layout_constraintTop_toTopOf="@+id/Fokdialogid"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editszazalekdialog"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:numeric="integer"
        app:layout_constraintBottom_toBottomOf="@+id/szazalekid"
        app:layout_constraintEnd_toEndOf="@+id/Spinnerfokdialog"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/szazalekid"
        app:layout_constraintTop_toTopOf="@+id/szazalekid"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>